<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/colorAccent"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/colorPrimaryDark"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/colorPrimary"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#E91E63"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#00BCD4"></TextView>

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="#FFC107"></TextView>

        </LinearLayout>


    </ScrollView>
</LinearLayout>