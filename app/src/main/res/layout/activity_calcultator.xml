<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Listener">




        <TextView

            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"

            android:text="0"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:gravity="right|center_vertical"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"

            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/ca"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="CA"
            android:textColor="#ffffff"
            android:textSize="50sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="50sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"

            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"

            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="50sp"

            ></TextView>

        <TextView
            android:gravity="center"
            android:id="@+id/zero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="50sp"></TextView>

    </LinearLayout>

</LinearLayout>